@{
    ViewData["Title"] = "CMS Page";
    Layout = "~/Views/backend/layout.cshtml";

}
@model IEnumerable<WebApplication2.Models.RoleClaim>

<h1>Permissions</h1>
<br />
<div class="card">
    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Add New Permssion
    </button>*@

    <div id="viewAll" class="card-body table-responsive">
        <!--<form asp-controller="permission" method="post" asp-action="Update" class="d-inline">-->
            @*<input asp-for= type="hidden" />*@
            <table class="table table-striped" id="permissionTable">
                <thead>
                    <tr>
                        <th>
                            Type
                        </th>
                        <th>
                            Permission
                        </th>
                        <th>
                             
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleId)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            @*<div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Save
                </button>
            </div>*@
        @*</form>*@
    </div>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-controller="permission" method="post" asp-action="Generatepermission" class="d-inline">
                    @*<input asp-for="@Model.RoleId" type="hidden" />*@

                    <div class="input-group">
                        <input name="module" class="form-control w-25">
                        <span class="input-group-btn">
                            <button class="btn btn-info">Add New Permissions</button>
                        </span>
                    </div>
                </form>

            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>*@
        </div>
    </div>
</div>