 @model WebApplication2.Models.ServicesViewModel
@{
    ViewData["Title"] = "CMS Page";
    Layout = "~/Views/backend/layout.cshtml";

}


<div class="content-wrapper">
    <div class="container">
        <div class="justify-content-center">
            <div class="card">
                <div class="card-header">
                    Create Service
                    <span class="float-right">
                        <a class="btn amanbt" href="Index">SERVICES</a>
                    </span>
                </div>
                <div class="card-body">
                    <div class="container">
                        <form asp-controller="Services" asp-action="create">
                            <input name="_token" type="hidden" value="zDSlVPilwm5WnSIE7YOU1JOcZCjlHYS7EXfpVcf3">
                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="row mt-3 mr-2">

                                        <label class="control-label"><strong>Service Title:</strong></label>
                                        <input name="title" class="form-control" />

                                    </div>





                                    <div class="row mt-3 mr-2">

                                        <label class="control-label"><strong>Service Small Description:</strong></label>
                                        <textarea name="smallDesc" class="form-control" maxlength="90" cols="50"></textarea>


                                    </div>
                                    <div class="row mt-3 mr-2">

                                        <label class="control-label"><strong>Service Tag:</strong></label>
                                        <input name="tag" class="form-control" />
                                    </div>

                                    <div class="row mt-3 mr-2">

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="row mt-3">

                                        <label asp-for="image" class="control-label"></label>
                                        <div class="custom-file">
                                            <input asp-for="image" accept="image/*" />
                                            <label class="custom-file-label" for="customFile">Choose file</label>



                                        </div>

                                        <div class="row mt-3">
                                            <label class="control-label"><strong>Service File:</strong></label>
                                            <input class="form-control" type="file" name="filefile" />

                                        </div>
                                        <br />


                                        <div id="div11" class="row mt-3">
                                            <strong>Service Category:</strong>


                                            <input class="form-control" name="Catogry" />



                                            <div class="row mt-4">
                                                <label class="control-label"><strong>Service Video Link:</strong></label>
                                                <input name="link" class="form-control" />
                                            </div>
                                        </div>

                                    </div>
                                <div class="row">
                                    <div class="col-lg-12 py-3">
                                        <label class="control-label"><strong>Service Large Description:</strong></label>
                                        <textarea name="largDesc" class="form-control" id="summary-ckeditor" cols="50" rows="10"></textarea>


                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success px-4 py-3">Submit</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
